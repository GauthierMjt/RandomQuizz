<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/random_quiz_main_background"
    tools:context=".MainActivity">
    <!--Score Board and Other things-->
    <TextView
        android:id="@+id/txtTotalQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questions: 1/6"
        android:textAlignment="center"
        android:background="@drawable/choosen_answer_background"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="52dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="125dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:text="Score: 0"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txtViewTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="00:30"
                android:textAlignment="textEnd"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/txtQuestionContainer"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="120dp"
                android:background="@drawable/choosen_answer_background"
                android:text="What's the capital of Australia ?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Canberra"
                    android:textSize="22sp"
                    android:textColor="#141414"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:button="@null"
                    android:freezesText="true"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/default_answer_background"
                    />

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sydney"
                    android:textSize="22sp"
                    android:textColor="#141414"
                    android:background="@drawable/default_answer_background"
                    android:textAlignment="center"
                    android:button="@null"
                    android:textStyle="bold"
                    android:freezesText="true"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"

                    />

                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adelaide"
                    android:textSize="22sp"
                    android:textColor="#141414"
                    android:textAlignment="center"
                    android:button="@null"
                    android:textStyle="bold"
                    android:freezesText="true"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/default_answer_background"

                    />

                <RadioButton
                    android:id="@+id/radio_button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cairns"
                    android:button="@null"
                    android:freezesText="true"
                    android:textSize="22sp"
                    android:textColor="#141414"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    android:background="@drawable/default_answer_background"

                    />
            </RadioGroup>


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Next"
            android:textColor="#FFFBFB"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="500dp"
            />


    </LinearLayout>

</LinearLayout>