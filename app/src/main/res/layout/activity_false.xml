<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/random_quiz_main_background"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_correct_ans"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:padding="10dp"
        android:singleLine="false"
        android:text="False Answer"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="296dp"
        android:layout_height="256dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="@drawable/false_answer_background"
        android:ellipsize="end"
        android:padding="20dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_wrong_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#BE1015"
        android:minHeight="48dp"
        android:text="DAMN"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>